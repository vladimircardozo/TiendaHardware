<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Productos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body style="background-color: #1e1d1e;">
    <div class="container">
    <h1 class="my-4" style="color: rgb(0, 116, 58);">Lista de productos</h1>
    <ul class="list-group mb-3">
      {{#each products}}
        <li class="d-flex list-group-item border shadow rounded justify-content-between align-items-center my-1" style="background-color: #403e40; border-color: #403e40 !important;">
          <div>
          <h3 class="mb-3 text-light">{{this.title}}</h3>
          <p style="color: rgb(0, 116, 58);" class="m-0">{{this.description}}</p>
          </div>
          <div>
          <span style="color: rgb(0, 116, 58);">Precio: ${{this.price}}</span>
          </div>
          <div class="d-flex flex-column align-items-center gap-2">
            <a href="/products/{{this._id}}" class="btn btn-primary">Ver detalles</a>
            <form action="/cart/add/{{this._id}}" method="post">
              <button type="submit" class="btn btn-success btn-sm pt-0">Agregar al carrito</button>
            </form>
          </div>
        </li>
      {{/each}}
    </ul>
    {{!-- Controles de paginaci√≥n --}}
    </div>
    <script src='/socket.io/socket.io.js'></script>
    <script>
      const socket = io(); socket.emit('message', 'cliente conectado');
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>